.footer
  background #383534
  color #fff
  padding 60px 0 80px
  
.footer__container
  display flex
  align-items center
  justify-content space-between

.footer__nav
  a
    color #fff
    
    &:hover
      color #bc5a50
    
    & + a
      margin-left 2.25 rem

// RESPONSIVE
// mobiles
@media screen  and (max-width 768px)
  .footer
    padding 30px 0 40px
  
  .footer__container
    text-align center
    display block
  
  .footer__nav
    margin-bottom 2rem
    
    a
      white-space nowrap
  
  .footer__social
    margin 0