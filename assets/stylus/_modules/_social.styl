.social
  position absolute
  top 0
  right 0
  
  clearlist()
  font-size 0
  
  &--inverse
    position static

.social__item + .social__item
  margin-left 10px

.social__link
  opacity .2
  transition opacity .16s ease
  
  &:hover
    opacity 1

// RESPONSIVE
// mobiles
@media screen  and (max-width 768px)
  .social
    position static
    text-align center
    margin-bottom 2rem