.event
  background #fff
  min-height 313px
  padding 0 36px 0.1px 350px
  position relative

.event__thumb
  position absolute
  top 0
  left 0
  bottom 0
  width 300px
  overflow hidden
  background-size cover
  background-repeat no-repeat
  background-position center

.event__data
  position relative
  padding-bottom 90px
  margin-bottom 35px
  

.event__header
  display flex
  align-items center
  justify-content space-between
  
  padding-top 40px
  margin-bottom 24px

.event__title
  font-family 'LatoLight'
  font-size 30px

.event__organizer
  font-size 13px

.event__description
  line-height 1.875
  margin-bottom 1rem

.event__link
  color #383534
  transition color .16s ease
  &:hover
    color #cc9a5f

.event__footer
  position absolute
  bottom 0
  left 0
  right 0
  clearfix()

.event__icons
  float left
  margin-top 18px
  margin-right 24.59%
  font-size 0

.event__icon + .event__icon
  margin-left 10px

.event__date
  float right
  font-size 13px
  line-height 1
  
  p:last-child
    color #668696
    font-size 26px
    margin-top 10px

.event__difficulty
  float left
  line-height 1
  font-size 13px

.event__rating
  margin-top 10px
  
  &[data-stars='1']
    sprite($icon_star1)
  &[data-stars='2']
    sprite($icon_star2)
  &[data-stars='3']
    sprite($icon_star3)
  &[data-stars='4']
    sprite($icon_star4)
  &[data-stars='5']
    sprite($icon_star5)


// RESPONSIVE
// tablets
@media screen and (max-width 992px)
  .event__title
    font-size 24px
    padding-right 1rem
  
  .event__description
    font-size 15px
    line-height 22px
  
  .event__tags
    text-align center
  
  .event__footer
    position static
    text-align center
    
    * + *
      margin-top 2rem
  
  .event__icons, .event__date, .event__difficulty
    float none
  
  .event__icons
    margin-right 0
  
  .event__rating
    margin 5px auto 0

  .event__date
    p:last-child
      margin-top 5px

  .event__data
    padding-bottom 0

// mobiles
@media screen and (max-width 768px)
  .event
    padding .1px
    max-width 90%
    margin-left auto
    margin-right auto
  
  .event__thumb
    position static
    width 100%
    height 240px
  
  .event__data
    padding 0 1rem
    margin-bottom 15px
  
  .event__header
    display block
  
  .event__icons
    margin-top 0

// mobiles
@media screen and (max-width 480px)
  .event
    max-width 100%