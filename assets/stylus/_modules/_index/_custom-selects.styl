.ui-selectmenu-button
  padding-right 40px
  height 40px
  outline 0

.ui-selectmenu-button .ui-selectmenu-text
  height 40px
  line-height 40px
  border-radius 16px 0 0 16px
  background #e9e9e9
  color #383534

.ui-selectmenu-button .ui-icon
  display block
  position absolute
  top 0
  right 0
  
  width 40px
  height 40px
  
  background-color #bc5a50
  border-radius 0 16px 16px 0
  
  &:after
    content ''
    display block
    position absolute
    top 18px
    left 14px
    sprite($icon_select_arrow)

.ui-widget-content
  background #e9e9e9

// открытый список
.ui-selectmenu-menu
  .ui-menu
    padding-bottom 8px
    border-radius 0 0 16px 16px
  
  .ui-menu-item
    padding 0
    padding-left 26px
    min-height 34px
    padding-top 6px
    padding-bottom 6px
    color #383534
    
    &:hover
      color #bc5a50
      background #fff
  
  .ui-state-disabled
    display none

.ui-asterisk
  color #bc5a50