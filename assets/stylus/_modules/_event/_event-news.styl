.event-news
  background #fff
  padding-bottom 30px
  margin-bottom 2rem
  
  &__thumb
    display block
    img
      width 100%
  
  &__header
    display flex
    align-items top
    justify-content space-between
    
    margin-top 24px
    margin-bottom 18px
    padding 0 24px
  
  &__title
    font-size 30px
    font-family 'LatoLight'
    
    a
      color inherit
      
      &:hover
        color #cc9a5f
  
  &__date
    margin-top 10px
    color #cc9a5f
  
  &__description
    padding 0 24px
    line-height 1.875


// RESPONSIVE
// tablets
// @media screen and (min-width 768px) and (max-width 970px)

// tablets
@media screen and (max-width 992px)
  .event-news
    max-width 640px
    margin 0 auto 2rem

@media screen  and (max-width 640px)
  .event-news
    max-width 480px

@media screen  and (max-width 360px)
  .event-news
    max-width 96%